<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.daitdayoung.index">

	<!-- 대분류 -->
<!-- 	<select id="leftCategory" resultType= "kr.co.daitdayoung.index.domain.CoursesDomain" >
	select 	mc_name, mc_code
	from 	maincategory 
	</select> -->
	
	<!-- 같은 대분류에 속한 소분류만 -->
	<select id="coursesCate" resultType="kr.co.daitdayoung.index.domain.CoursesDomain">
	select 	distinct sc.sc_name
	from 	maincategory mc
	join 	subcategory sc on mc.mc_code = sc.mc_code
	where 	mc.mc_code = #{mc_code}
</select>
	
</mapper>